@model Lab4.Models.ViewModels.BrokerageViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                Fee
               @* @Html.DisplayNameFor(model => model.Fee)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Brokerages) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.Clients != null)
{
    <h3>
        Subscribers to the brokerage
    </h3>
    <table class="table">
        <tr>
            @if (Model.Clients.Count() > 0)
            {
                <th> Clients </th>
            }
            else
            {
                <th> No client record exist </th>
            }
        </tr>
        @foreach (var item1 in Model.Clients)
        {
            <tr>
                <td>
                     @Html.DisplayFor(modelItem => item1.FirstName)
                    
                </td>
            </tr>
        }
    </table>
}
